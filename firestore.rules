rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Products collection - anyone can read, write allowed for development
    match /products/{productId} {
      allow read: if true; // Anyone can read products
      // Allow write for all users (temporary for development)
      // TODO: Change to require authentication in production: if isAuthenticated()
      allow create, update, delete: if true;
    }

    // Carts collection - users can only access their own cart
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Orders collection - only authenticated users can create orders
    // and users can read their own orders. For creation we require that
    // the incoming document's userId matches the authenticated uid.
    match /orders/{orderId} {
      // Allow creating an order if the request is authenticated and
      // the order.userId equals the authenticated uid.
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid
        // Basic validation for required fields on create
        && request.resource.data.orderId is string
        && request.resource.data.userEmail is string
        && request.resource.data.items is list
        && request.resource.data.total is number;

      // Allow read/update/delete only for the owner of the order
      allow read, update, delete: if resource.data.userId == request.auth.uid;
    }
  }
}
