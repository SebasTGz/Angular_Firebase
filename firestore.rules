rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Products collection - anyone can read, write allowed for development
    match /products/{productId} {
      allow read: if true; // Anyone can read products
      // Allow write for all users (temporary for development)
      // TODO: Change to require authentication in production: if isAuthenticated()
      allow create, update, delete: if true;
    }

    // Carts collection - users can only access their own cart
    match /carts/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
